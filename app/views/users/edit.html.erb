<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6 text-center text-white pt-5">
    <% if @user.errors.any? %>
    <%= @user.errors.count %>件のエラーが発生しました
    <% @user.errors.full_messages.each do |message| %>
      <div>
        <li><font color="red"><%= message %></font></li>
      </div>
    <% end %>
    <% end %>
    <%= form_with model: @user, url: update_user_path, local: true do |f| %>

      <%= attachment_image_tag @user, :profile_image, :size => '100x100', fallback: "no_image.jpg"%>

      <p>プロフィール画像</p>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>

      <p>名前</p>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" , class: "w-50" %>

      <p>メールアドレス</p>
      <%= f.text_field :email, autofocus: true, class: "w-50" %>

      <p>自己紹介文</p>
      <%= f.text_area :introduction, rows: 6 , class: "w-50" %><br>
      <div class="pt-2">
        <%= f.submit '更新', class: "btn btn-success w-25" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-3">
  </div>
</div>