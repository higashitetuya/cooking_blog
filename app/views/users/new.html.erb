<div class="mt-5 mb-3 text-center">
  <font color="red">
  </font>
</div>
<div class="row">
  <div class="col-lg-2">
  </div>
    <div class="col-lg-8">
      <% if @user.errors.any? %>
          <%#= @user.errors.count %>
          <% @user.errors.full_messages.each do |message| %>
            <div>
              <li><font color="red"><%= message %></font></li>
            </div>
          <% end %>
        <% end %>
      <div class="h3 text-center text-white pb-3">新規登録</div>
      <div class="row">
        <div class="col-lg-6 text-white">
          <%= form_with model: @user, url: user_path, local: true do |f| %>
          <%= image_tag 'cooking1.jpg', :size => '200x150' %>
          <div class="pt-2">
          プロフィール画像
          </div>
          <div class="pt-2">
          <%= f.attachment_field :profile_image %>
          </div>
          <div class="field">
            <%= f.label :名前 %><br>
            <%= f.text_field :name, :placeholder => "\uf007 名前" ,class: "form-control w-75 fa" %>
          </div>
          <div class="field">
            <%= f.label :メールアドレス %><br>
            <%= f.text_field :email, :placeholder => "\uf199 メールアドレス" ,class: "form-control w-75 fa" %>
          </div>
        </div>
        <div class="col-lg-6 text-white">
          <div class="field">
            <%= f.label :自己紹介文 %><br>
            <%= f.text_area :introduction, rows: 6 , :placeholder => "\uf2bb ここに自己PR文を入れてください" ,class: "form-control w-75 fa" %>
          </div>
          <div class="field">
            <%= f.label :パスワード %><br>
            <%= f.password_field :password, :placeholder => "\uf502 パスワード"  ,class: "form-control w-75 fa" %>
          </div>
          <div class="field">
            <%= f.label :パスワード（確認用） %><br>
            <%= f.password_field :password_confirmation ,class: "w-75" %>
          </div>
          <div class="mt-3">
            <%= f.submit "新規登録" ,class: "btn btn-success" %>
          </div>
          <div class="mt-2 pb-3">
            新規登録をされた方は<%= link_to "こちら>", login_path %>
          </div>
        </div>
      </div>
    </div>
  <div class="col-lg-2">
  </div>
</div>

<% end %>
