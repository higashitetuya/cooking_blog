<div class="row">
  <div class="col-lg-2">
  </div>
  <div class="col-lg-8 text-white pt-5">
        <% if @cooking.errors.any? %>
          <%= @cooking.errors.count %>件のエラーが発生しました
          <% @cooking.errors.full_messages.each do |message| %>
            <div>
              <li><font color="red"><%= message %></font></li>
            </div>
          <% end %>
        <% end %>
    <div class="row">
      <div class="col-lg-6">
        <%= form_with model: @cooking, local:true do |f| %>
          <p>料理投稿</p>
          <%= image_tag 'cooking_new.jpg', :size => '200x150' %>
          <p>料理</p>
          <%= f.attachment_field :cooking_image %>
          <p class="pt-2">料理名</p>
          <%= f.text_field :name %>
      </div>
      <div class="col-lg-6">
        <p>作り方</p>
        <%= f.text_area :cooking_introduction, size: "46x11" %>
        <div class="text-center">
          <%= f.submit '投稿する', class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
  <div class="col-lg-2">
  </div>
</div>